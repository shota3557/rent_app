<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @property.name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @property.rent %>
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @property.year %>
</p>

<p>
  <strong>備考:</strong>
  <%= @property.remarks %>
</p>

<hr>

<% n = 0 %>
<% @near_stations.each do |near_station| %>
  <% if @property.near_stations.any? %>
    <h3>最寄り駅<%= n += 1 %></h3>
  
  <p>
    <strong>路線名:</strong>
    <%= near_station.train_name %>
  </p>

  <p>
    <strong>駅名:</strong>
    <%= near_station.station_name %>
  </p>

  <p>
    <strong>徒歩分数:</strong>
    <%= near_station.walking_time %>分
  </p>
  <% end %>
<% end %>

<%= link_to '編集', edit_property_path(@property) %> |
<%= link_to '戻る', properties_path %>